.hash:before {
  content: "{"; }

.hash {
  font-family: Menlo,Courier New;
  color: #93a1a1;
  width: 80%;
  margin: auto;
  font-size: 2rem; }
  .hash p {
    margin: 1em 0 1em 0;
    display: inline;
